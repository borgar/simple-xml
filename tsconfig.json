{
  "include": [ "lib/**/*" ],
  "compilerOptions": {
    "rootDir": "lib",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "outDir": "types",
    "declarationMap": false
  }
}
